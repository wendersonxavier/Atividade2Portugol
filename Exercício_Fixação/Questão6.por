algoritmo "Números ímpares e pares"
 
var
   count, numbers, number: inteiro

inicio

escreval("Digite um número: ")
leia(number)

count <- 0
numbers <- number
enquanto(count = 0)faca
   para(number de 1 ate numbers)faca 
      se(number mod 2 = 0)entao  
         escreval(number, " é Par")
      senao
     escreval(number, " é Impar")
   count <- count + 1
      fimse
   fimpara
fimenquanto
fimalgoritmo
